{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ands": "array",
    "items": {
      "type": "string"
    },
    "entity": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "required" : ["id", "name"]
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "package": {
        "type": "string"
      },
      "$ref": "definitions.json#/entity",
      "$ref": "definitions.json#/tags",
      "stories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "$ref": "definitions.json#/entity",
            "$ref": "definitions.json#/tags",
            "scenarios": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "method": {
                    "type": "string"
                  },
                  "given": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "$ref": "definitions.json#/ands"
                  },
                  "when": "object",
                  "properties": {
                    "properties": {
                      "text": {
                        "type": "string"
                      },
                      "$ref": "definitions.json#/ands"
                    }
                  },
                  "then:": "object",
                  "properties": {
                    "properties": {
                      "text": {
                        "type": "string"
                      },
                      "$ref": "definitions.json#/ands"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}